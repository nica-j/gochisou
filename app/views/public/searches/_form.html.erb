<% if user_signed_in? || admin_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content, placeholder: "キーワード検索" %>
    <%= f.select :model, options_for_select({"投稿" => "post", "ユーザー" => "user"}) %>
    <%= f.submit "検索" %>
  <% end %>
<% end %>