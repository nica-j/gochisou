<div class="container mt-3">
  <div class="row">
    <div class="d-flex">
      <div class="mr-5">
        <% if @post.image.attached? %>
          <%= image_tag @post.image, size: "240x180" %>
        <% else %>
          <%= image_tag 'no_image.jpg', size: "240x180" %>
        <% end %>
      </div>
      <div>
        <h3><%= @post.dish %></h3>
        <p><%= @post.impression %></p>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="d-flex align-items-end text-center">
      <div>
        <% if @post.user.image.attached? %>
          <%= link_to (image_tag @post.user.image, size: "50x50"), admin_user_path(@post.user_id) %>
        <% else %>
          <%= link_to (image_tag 'no_image.jpg', size: "50x50"), admin_user_path(@post.user_id) %>
        <% end %>
      </div>
      <p class="ml-3"><%= link_to @post.user.name, admin_user_path(@post.user_id) %></p>
      <div class="ml-4">
        <%= render 'public/comments/counter', post: @post %>
        <br><span class="text-secondary">comment</span>
      </div>
      <div class="ml-3">
        <%= @post.favorites.count %>
        <br><span class="text-secondary">食べたい</span>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div>
      <h5 class="ml-3">店舗情報</h5>
      <div class="mt-1"><span>店名：</span><%= @post.restaurant_name %></div>
      <div class="mt-1"><span>メニュー名：</span><%= @post.menu %></div>
      <div class="mt-1"><span>住所：</span><%= @post.address %></div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-2 ml-auto">
      <%= link_to '削除する', admin_post_path(@post), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger ml-2" %>
    </div>
  </div>
  <div id="comments" class="row mt-3">
    <%= render 'public/comments/index', post: @post %>
  </div>
</div>