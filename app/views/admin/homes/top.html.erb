<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <table class= "table table-borderless mt-1">
        <thead class="thead-light">
          <tr>
            <th style="width: 5%">ID</th>
            <th style="width: 5%"></th>
            <th style="width: 20%">料理</th>
            <th style="width: 50%">感想</th>
            <th style="width: 5%"></th>
            <th style="width: 15%">ユーザー</th>
          </tr>
        </thead>
        <% @posts.each do |post| %>
          <tbody>
            <tr>
              <td><%= post.id %></td>
              <td>
                <% if post.image.attached? %>
                  <%= image_tag post.image, size: "40x30" %>
                <% else %>
                  <%= image_tag 'no_image', size: "40x30" %>
                <% end %>
              </td>
              <td><%= link_to post.dish, admin_post_path(post) %></td>
              <td><%= post.impression.truncate(64) %></td>
              <td>
                <% if post.user.image.attached? %>
                  <%= image_tag post.user.image, size: "30x30" %>
                <% else %>
                  <%= image_tag 'user_no_image', size: "30x30" %>
                <% end %>
              </td>
              <td><%= link_to post.user.name, admin_user_path(post.user_id) %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>