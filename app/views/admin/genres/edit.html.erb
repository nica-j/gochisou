<div class="container mt-3">
  <div class="row">
    <div>
			<h4 class="col-12 mb-3">ジャンル名編集</h4>
				<%= form_with model: @genre, url: admin_genre_path(@genre), method: "patch" do |f| %>
				<%= render 'layouts/error_messages', resource: @genre %>
				<%= f.label :name, "ジャンル名", class:"mx-1" %>
				<%= f.text_field :name %>
				<%= f.submit "変更", class: "btn btn-primary ml-1" %>
			<% end %>
		</div>
  </div>
</div>